    "license" : "MIT",

    "autoload" : {
        "psr-4" : { "Juno\\" : "src" },
        "files" : [ "src/functions.php" ]
    },

    "require" : {
        "php"             : ">=5.3.3",
        "silex/silex"     : "*",
        "twig/twig"       : "*",
        "bernard/bernard" : "*",
        "ahtinurme/silex"   : "*"
    },

    "extra" : {
        "branch-alias" : {
            "dev-master" : "1.0.x-dev"
        },

        "resoures" : {
            "export" : { "juno" : "src/Resources/views" }
        }
    }
}
